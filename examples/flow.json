{
  "name": "example",
  "description": "Sample flow showing inline, process, and container nodes",
  "start": ["start"],
  "nodes": [
    {
      "id": "start",
      "name": "Starter",
      "executor": "inline",
      "callable": "examples.flow_functions:starter",
      "transitions": {"success": ["branch"]}
    },
    {
      "id": "branch",
      "name": "Branch",
      "executor": "inline",
      "callable": "examples.flow_functions:branching",
      "transitions": {
        "even": ["process"],
        "odd": ["final"]
      }
    },
    {
      "id": "process",
      "name": "Process Worker",
      "executor": "process",
      "callable": "examples.flow_functions:intensive",
      "transitions": {"success": ["container"]}
    },
    {
      "id": "container",
      "name": "Docker Processor",
      "executor": "docker",
      "image": "conductor-example-node:latest",
      "description": "Example container node that enriches the payload",
      "transitions": {
        "success": ["final"],
        "error": ["final"]
      }
    },
    {
      "id": "final",
      "name": "Finalizer",
      "executor": "inline",
      "callable": "examples.flow_functions:finalizer",
      "transitions": {}
    }
  ]
}
